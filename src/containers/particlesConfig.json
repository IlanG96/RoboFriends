{
  "backgroundMode": {
    "enable": true,
    "zIndex": 0
  },
  "background": {
    "color": ""
  },
  "fpsLimit": 60,
  "interactivity": {
    "detectsOn": "canvas",
    "events": {
      "onClick": { "enable": true, "mode": "repulse" },
      "onHover": {
        "enable": true,
        "mode": "bubble",
        "parallax": { "enable": false, "force": 2, "smooth": 10 }
      },
      "resize": true
    },
    "modes": {
      "bubble": {
        "distance": 400,
        "duration": 0.3,
        "opacity": 0.5,
        "size": 6,
        "speed": 1
      },
      "grab": { "distance": 400, "line_linked": { "opacity": 0.9 } },
      "push": { "particles_nb": 4 },
      "remove": { "particles_nb": 2 },
      "repulse": { "distance": 200, "duration": 0.4 }
    }
  },
  "particles": {
    "color": { "value": "#adefd1" },
    "links": {
      "color": "#ffffff",
      "distance": 500,
      "enable": false,
      "opacity": 0.4,
      "width": 2
    } ,
    "move": {
      "attract": { "enable": false, "rotateX": 600, "rotateY": 1200 },
      "direction": "top",
      "enable": true,
      "outMode": "out",
      "random": false,
      "size": true,
      "speed": 2,
      "straight": false
    },
    "number": { "density": { "enable": true, "area": 800 }, "value": 400 },
    "opacity": {
      "random": false,
      "value": 0.5
    },
    "shape": {
      "type": "circle"
    },
    "size": {
      "random": true,
      "value": 3
    }
  },
  "detectRetina": true
}
